<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="log">

	<resultMap id="logList" type="egovframework.let.shop.scheduler.service.Scheduler">
		<result property="log_idx" column="LOG_IDX" />
	</resultMap>

	<select id="selectLogList" resultMap="logList"> 
      <![CDATA[ 
         SELECT 
            LOG_IDX
         FROM
            MLOG
      ]]>
	</select>

	<insert id="log.insertLog" >
		INSERT INTO LOG(LOG_IDX) SELECT ifnull(MAX(LOG_IDX) + 1,1) FROM LOG
	</insert>

	<delete id="log.deleteLog" parameterType="egovframework.let.shop.scheduler.service.Scheduler">
      <![CDATA[ 
         DELETE FROM MLOG where LOG_IDX = #{log_idx}
      ]]>
	</delete>

</mapper>