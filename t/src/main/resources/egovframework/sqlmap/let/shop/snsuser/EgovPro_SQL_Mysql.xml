<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="SnsProfile">

	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="SnsProfileVO" type="egovframework.let.shop.user.service.SnsProfileVO"/>
	<typeAlias  alias="SnsProfile" type="egovframework.let.shop.user.service.SnsProfile"/>
					
	<resultMap id="snsProfileList" class="egovframework.let.shop.user.service.SnsProfileVO"> <!-- property는 vo값 -->
		<result property="userid" column="USERID" columnIndex="1"/>						 <!-- collum 은 db의 컬럼값 -->
		<result property="snscode" column="SNSCODE" columnIndex="2"/>			 <!--  db의 컬럼 순서 -->
		<result property="nickname" column="NICKNAME" columnIndex="3"/>
		<result property="email" column="EMAIL" columnIndex="4"/>
		<result property="reg_date" column="REG_DATE" columnIndex="5"/>
		<result property="del_yn" column="DEL_YN" columnIndex="6"/>
	</resultMap>
	
	<select id="EgovMngProDAO.selectMngProList" parameterClass="SnsProfileVO" resultMap="snsProfileList" >
		<![CDATA[
			SELECT 
				   USERID
				  ,SNSCODE
				  ,NICKNAME
				  ,EMAIL
				  ,REG_DATE
				  ,DEL_YN
			FROM
				SNSPROFILE
			WHERE 1=1
		]]>				
			<isEqual prepend="AND" property="searchCnd" compareValue="0"> <!-- prepend로 and,or...쓰고 searchCnd값이 0이면 쿼리 문을 실행 시킨다. -->
				<![CDATA[	USERID LIKE CONCAT ('%', #searchWrd#,'%') 		]]>
			</isEqual>
			<isEqual prepend="AND" property="searchCnd" compareValue="1">
				<![CDATA[	SNSCODE LIKE CONCAT ('%', #searchWrd#,'%') 		]]>
			</isEqual>	
		<![CDATA[			
			ORDER BY REG_DATE DESC
			LIMIT #recordCountPerPage# OFFSET #firstIndex#
		]]>					
	</select>
	
	<select id="EgovMngProDAO.selectMngProListCnt" parameterClass="SnsProfileVO" resultClass="java.lang.Integer" >
		<![CDATA[
			SELECT 
				COUNT(USERID)
			FROM
				SNSPROFILE
			WHERE 1=1
		]]>				
			<isEqual prepend="AND" property="searchCnd" compareValue="0"> <!-- prepend로 and,or...쓰고 searchCnd값이 0이면 쿼리 문을 실행 시킨다. -->
				<![CDATA[	USERID LIKE CONCAT ('%', #searchWrd#,'%') 		]]>
			</isEqual>
			<isEqual prepend="AND" property="searchCnd" compareValue="1">
				<![CDATA[	SNSCODE LIKE CONCAT ('%', #searchWrd#,'%') 		]]>
			</isEqual>	
		<![CDATA[			
			ORDER BY REG_DATE DESC
			LIMIT #recordCountPerPage# OFFSET #firstIndex#
		]]>					
	</select>
	
	<insert id="EgovSnsUserDAO.insertSnsUser" parameterClass="SnsProfileVO" resultClass="java.lang.Integer">
		<![CDATA[
			INSERT INTO SNSPROFILE
			(USERID, SNSCODE, NICKNAME, EMAIL, REG_DATE, DEL_YN)
			VALUES
			(#userid#,#snscode#,#nickname#,#email#,sysdate,'N')
		]]>
	</insert>
	
	<select id="EgovSnsUserDAO.checkUserLogin" parameterClass="java.lang.Integer" resultMap="java.lang.Integer" >
		<![CDATA[
			SELECT 
					COUNT(*) AS CNT
			FROM 
					SNSPROFILE 
			WHERE 	
					1=1
		]]>
	</select>
